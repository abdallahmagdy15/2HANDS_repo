<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle" >

            <padding
                android:top="1px"
                android:bottom="1px"
                android:start="3px"
                android:end="3px" />

            <!-- View background color -->
            <solid
                android:color="#B7E6FF" >
            </solid>

            <!-- The radius makes the corners rounded -->
            <corners
                android:radius="15dp">
            </corners>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >

            <!-- View background color -->
            <solid
                android:color="#CBEBFC" >
            </solid>

            <!-- The radius makes the corners rounded -->
            <corners
                android:radius="15dp">
            </corners>
        </shape>
    </item>
</layer-list>