<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/postContainer_shimmer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:background="@color/colorPureWhite">

    <com.joooonho.SelectableRoundedImageView
        android:id="@+id/postProfileShimmer"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:src="#D028B5ED"
        app:sriv_right_top_corner_radius="20dp"
        app:sriv_left_top_corner_radius="20dp"
        app:sriv_left_bottom_corner_radius="20dp"
        app:sriv_right_bottom_corner_radius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/postOptionsShimmer"
        android:layout_width="40dp"
        android:layout_height="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="#D028B5ED"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/postUserNameShimmer"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="210dp"
        app:cardBackgroundColor="#D028B5ED"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/postProfileShimmer"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/postCategoryTimeLocationShimmer"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="120dp"
        app:cardBackgroundColor="#D028B5ED"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/postProfileShimmer"
        app:layout_constraintTop_toBottomOf="@id/postUserNameShimmer" />

    <androidx.cardview.widget.CardView
        android:id="@+id/postContent1Shimmer"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="#D028B5ED"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/postProfileShimmer" />

    <androidx.cardview.widget.CardView
        android:id="@+id/postContent2Shimmer"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="64dp"
        app:cardBackgroundColor="#D028B5ED"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/postContent1Shimmer" />

    <androidx.cardview.widget.CardView
        android:id="@+id/postContent3Shimmer"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="32dp"
        app:cardBackgroundColor="#D028B5ED"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@+id/postContent2Shimmer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/postReactContainerShimmer"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/postContent3Shimmer">

        <com.joooonho.SelectableRoundedImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:src="#D028B5ED"
            app:sriv_right_top_corner_radius="20dp"
            app:sriv_left_top_corner_radius="20dp"
            app:sriv_left_bottom_corner_radius="20dp"
            app:sriv_right_bottom_corner_radius="20dp" />

        <com.joooonho.SelectableRoundedImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:src="#D028B5ED"
            app:sriv_right_top_corner_radius="20dp"
            app:sriv_left_top_corner_radius="20dp"
            app:sriv_left_bottom_corner_radius="20dp"
            app:sriv_right_bottom_corner_radius="20dp" />

        <com.joooonho.SelectableRoundedImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:src="#D028B5ED"
            app:sriv_right_top_corner_radius="20dp"
            app:sriv_left_top_corner_radius="20dp"
            app:sriv_left_bottom_corner_radius="20dp"
            app:sriv_right_bottom_corner_radius="20dp" />

        <com.joooonho.SelectableRoundedImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:src="#D028B5ED"
            app:sriv_right_top_corner_radius="20dp"
            app:sriv_left_top_corner_radius="20dp"
            app:sriv_left_bottom_corner_radius="20dp"
            app:sriv_right_bottom_corner_radius="20dp" />

        <com.joooonho.SelectableRoundedImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:src="#D028B5ED"
            app:sriv_right_top_corner_radius="20dp"
            app:sriv_left_top_corner_radius="20dp"
            app:sriv_left_bottom_corner_radius="20dp"
            app:sriv_right_bottom_corner_radius="20dp" />

    </LinearLayout>

    <view
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/colorGrayLight"
        class="android.widget.TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/postReactContainerShimmer" />

</androidx.constraintlayout.widget.ConstraintLayout>